<h1>Real Time Products</h1>

<div class="container">
<div id="content" class="row">
    <div class="row my-5">
        <div class="col-md-6">
            <h2>Agregar Producto</h2>
                <form id="addProductForm">
                    <div class="mb-3">
                        <label for="title" class="form-label">Titulo</label>
                        <input type="text" class="form-control" id="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="description" required>
                    </div>
                    <div class="mb-3">
                        <label for="code" class="form-label">Codigo</label>
                        <input type="text" class="form-control" id="code" required>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Precio</label>
                        <input type="number" class="form-control" id="price" required>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Categoria</label>
                        <input type="text" class="form-control" id="category" required>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Imagen URL</label>
                        <input type="text" class="form-control" id="image">
                    </div>
                        <button type="submit" class="btn btn-primary">Agregar Producto</button>
                </form>
        </div>
    <div class="col-md-6">
        <h2>Eliminar Producto</h2>
            <form id="deleteProductForm">
                <div class="mb-3">
                    <label for="product_id" class="form-label">Producto</label>
                    <select id="product_id" class="form-control"></select>
                </div>
                    <button type="button" class="btn btn-danger" id="deleteProductButton">Eliminar Producto</button>
            </form>
    </div>
</div>

<div id="productsList" class="row"></div>
</div>
</div>

<script src="socket.io/socket.io.js"></script>
<script src="../public/js/realtimeroducts.js"></script>
