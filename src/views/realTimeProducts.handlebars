<h1>Real Time Products</h1>


<div class="conteiner">
        <div id= "content" class="row">
            <div class="row my-5">
                <div class="col-md-6">
                    <h2>Agregar Producto</h2>
                        <form>
                            <div class="mb-3">
                                <label for="nombre" class="form-label">Email address</label>
                                <input type="text" class="form-control" id="nombre" aria-describedby="emailHelp">
                            </div>
                            <div class="mb-3">
                                <label for="descripcion" class="form-label">Descripcion</label>
                                <input type="text" class="form-control" id="descripcion">
                            </div>
                            <div class="mb-3">
                                <label for="code" class="form-label">Code</label>
                                <input type="text" class="form-control" id="code">
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">Precio</label>
                                <input type="number" class="form-control" id="price">
                            </div>
                            <div class="mb-3">
                                <label for="category" class="form-label">Categoria</label>
                                <input type="text" class="form-control" id="category">
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Imagen</label>
                                <input type="text" class="form-control" id="image">
                            </div>
                                <button onclick= agregarProducto() type="submit" class="btn btn-primary">Submit</button>
                        </form>
                </div>
                <div class="col-md-6">
                    <h2>Eliminar Producto</h2>
                    <form>
                        <div class="mb-3">
                        <label for="product_id" class="form-label">Producto</label>
                        <select id="product_id"  class="form-control" >
                        </div>
                        <button onclick= eliminarProducto() type="button" class="btn btn-primary">Enviar</button>
                    </form>
                </div>
            </div>
        </div>

</div>

<script src="../public/js/realtimeroducts.js"></script>
<script src="socket.io/socket.io.js"></script>